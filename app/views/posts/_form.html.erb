<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    Tags:
  </div>

  <div class="field">
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br>
    </div>

    <ul>
    <li><%= f.fields_for :tag_attributes, Tag.new do |tag_attribute| %><br></li>
      <li><%= tag_attribute.label :name %><br></li>
      <li><%= tag.attribute.text_field :name %><br></li>
      <% end %>
  </ul>



  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
